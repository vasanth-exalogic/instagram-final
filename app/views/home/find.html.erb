<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  margin: 0 auto;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
</style>

<% @users.each do |user| %>
<% if user.id != current_user.id %>
<br>
  <div class="card">
    <% if user.dp.attached? %>
      <%= link_to image_tag(user.dp, style: 'width:100%;'), profile_path(user.username) %>
      <% else %>
        <%= link_to image_tag("https://image.flaticon.com/icons/png/512/64/64572.png", style: 'width:100%;'), profile_path(user.username)%>
      <% end %>
    <div class="container">
      <h4><b><a href="#"><%= user.username%></a></b></h4>
      <p><%= user.bio%></p>
    </div>
  </div>
<% end %>
<% end %>
<br>
