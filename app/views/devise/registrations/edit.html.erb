<link href="https://fonts.googleapis.com/css?family=Indie+Flower|Overpass+Mono" rel="stylesheet">
<div id="wrapper">
  <div class="main-content">
    <div class="header">
      <h1>Edit Profile</h1>
      <br>
    </div>
    <div class="l-part">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'input-1', required: true %>
        <%= f.text_field :username, placeholder: 'Username', class: 'input-1', required: true %>
        <%= f.text_field :name, placeholder: 'Name', class: 'input-1'%>
        <% if resource.dp.attached? %>
          <%= image_tag(resource.dp, style: 'width:100px;height:100px;crop:stretch;border-radius:50%;') %>
        <% end %>
        <%= f.file_field :dp, class: 'input-1'%>
        <%= f.text_field :contact, placeholder: 'Contact', class: 'input-1'%>
        <%= f.date_field :bday, class: 'input-1'%>
        <%= f.text_area :bio, placeholder: 'Bio', class: 'input-1'%>
        <p>Gender : <%= f.radio_button :gender, 'male',:required => true %> Male <%= f.radio_button :gender, 'female' %> Female </p>
        <%= f.password_field :current_password, class: 'input-2', placeholder: 'Current Password' %>
        <%= f.submit "Update", class: 'btn' %>
      <% end %>
    </div>
    <span><br><%= link_to "Back", profile_path(resource.username), class: 'btn', style: 'background-color:grey;border-color:grey' %></span>

  </div>
  <div class="sub-content">
    <div class="s-part">
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn' %></p>
    </div>
  </div>
</div>

<style media="screen">
